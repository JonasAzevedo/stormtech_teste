<div class="container">
    
    <% if flash[:error]  %>
        <div class="row">
            <div class="col-xs-12">
                <div id="error_explanation">
                    <h2><%= flash[:error] %></h2>
                </div>
            </div>
        </div>
    <% end %>    
        
    <% if !@books.blank? %>                       
        <div class="row">        
            <div class="col-xs-12">            
                <table class="table table-striped table-bordered table-hover tbl_books" cellspacing="0" cellpadding="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Edition_year</th>
                            <th>Author</th>
                        </tr>
                    </thead>
                    <tbody>                 
                        <% @books.each do |book| %>
                        <tr>
                            <td><%= book.id %></td>
                            <td><%= book.title %></td>
                            <td><%= book.edition_year %></td>
                            <td><%= book.author.name %></td>
                        </tr>    
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
        
        <hr />
    
        <div class="row">
            <div class="col-xs-12">            
                <p class="pull-right modoOrder">Modo de ordenação selecionado: <strong><%= @fieldOrder %> / <%= @modeAscDesc %></strong> </p>
            </div>
        </div>  
    <% end %>    
</div>    
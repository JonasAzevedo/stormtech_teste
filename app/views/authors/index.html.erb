<div class="container">
    <div class="row">
        <p id="notice"><%= notice %></p>
    </div>
    
    <div class="row">
        <div class="col-xs-12">                        
            <h1 class="title">Listing Authors</h1>
        </div>
    </div>
    
    <div class="row">
        <div class="col-xs-12">
            <%= link_to 'New Author', new_author_path, :class => "pull-right lnkNewRecord"  %>            
        </div>
    </div>
    
    <div class="row">
        <div class="col-xs-12">
             <table class="table table-striped table-bordered table-hover tbl_books" cellspacing="0" cellpadding="0">
                <thead>
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Author</th>                        
                        <th class="text-center">Edit</th>
                        <th class="text-center">Destroy</th>
                    </tr>
                </thead>
                
                 <tbody>
                     <% @authors.each do |author| %>
                     <tr>
                         <td><%= author.id %></td>
                         <td><%= author.name %></td>
                         <td class="text-center">
                            <%= link_to edit_author_path(author) do %>
                                <i class="glyphicon glyphicon-edit"></i>
                            <% end %>               
                        </td>
                        <td class="text-center">
                            <%= link_to author, method: :delete, data: { confirm: 'Are you sure?' } do %>                            
                            <i class="glyphicon glyphicon-remove"></i>
                            <% end %>
                        </td>
                     </tr>
                     <% end %>
                 </tbody>
             </table>
        </div>
    </div>
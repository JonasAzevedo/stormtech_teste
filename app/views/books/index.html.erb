<div class="container">
    <div class="row">
        <p id="notice"><%= notice %></p>
    </div>
    <div class="row">
        <div class="col-xs-12">                        
            <h1 class="title">Listing Books</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <%= link_to 'New Book', new_book_path, :class => "pull-right lnkNewRecord"  %>            
        </div>
    </div>
            
    <div class="row">
        <div class="col-xs-12">
            
            <table class="table table-striped table-bordered table-hover tbl_books" cellspacing="0" cellpadding="0">
                <thead>
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Title</th>
                        <th class="text-center">Edition_year</th>
                        <th class="text-center">Author</th>                        
                        <th class="text-center">Edit</th>
                        <th class="text-center">Destroy</th>
                    </tr>
                </thead>
                <tbody>                 
                    <% @books.each do |book| %>
                    <tr>
                        <td><%= book.id %></td>
                        <td><%= book.title %></td>
                        <td><%= book.edition_year %></td>                        
                        <td><%= book.author.name %></td>
                        <td class="text-center">
                            <%= link_to edit_book_path(book) do %>
                                <i class="glyphicon glyphicon-edit"></i>
                            <% end %>               
                        </td>
                        <td class="text-center">
                            <%= link_to book, method: :delete, data: { confirm: 'Are you sure?' } do %>                            
                            <i class="glyphicon glyphicon-remove"></i>
                            <% end %>
                        </td>
                    </tr>    
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>    

